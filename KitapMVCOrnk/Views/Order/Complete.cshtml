@model List<KitapMVCOrnk.Models.CartItem>

<h2>Siparişi Tamamla</h2>

<form asp-action="CompleteOrder" method="post">
    <div class="form-group">
        <label>Kullanıcı ID:</label>
        <input type="number" name="userId" class="form-control" required />
    </div>

    <h4>Sepetteki Ürünler</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Kitap</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Toplam</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price ₺</td>
                    <td>@(item.Price * item.Quantity) ₺</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Siparişi Tamamla</button>
</form>
