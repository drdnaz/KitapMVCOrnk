@model List<KitapMVCOrnk.Models.Category>

<h2 class="text-center">Kategoriler</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var category in Model)
    {
        <div class="col">
            <div class="card h-100 text-center p-4">
                <a asp-controller="Category" asp-action="BooksByCategory" asp-route-id="@category.Id" class="btn btn-outline-dark">
                    @category.Name
                </a>
            </div>
        </div>
    }
</div>